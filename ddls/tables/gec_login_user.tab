create table GEC_LOGIN_USER
(
  LOGIN_ID        NUMBER(38) NOT NULL,
  USER_ID         VARCHAR2(64) not null,
  LOGIN_TIME      DATE NOT NULL,
  LOGOFF_TIME     DATE,
  STATUS          VARCHAR2(1),
  USER_AGENT      VARCHAR2(64),
  LAST_UPDATED_BY VARCHAR2(64),
  LAST_UPDATED_AT DATE
)TABLESPACE GEC
;
alter table GEC_LOGIN_USER
  add ( constraint GEC_LOGIN_USER_PK primary key (LOGIN_ID) USING INDEX  TABLESPACE GEC);
alter table GEC_LOGIN_USER
  add constraint GEC_LOGIN_USER_FK1 foreign key (USER_ID)
  references GEC_USER (USER_ID);
  
comment on table GEC_LOGIN_USER
  is 'Record User Login/LogOff.';
comment on column GEC_LOGIN_USER.STATUS
  is 'A: Active, means online; I: user logout successfully; E: exception, usually because of session timeout or one cluster member shutdown; X: Active login user is cleaned by DB daily job, and set to X status.';
