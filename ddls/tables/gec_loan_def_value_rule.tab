CREATE TABLE GEC_LOAN_DEF_VALUE_RULE
(
  LOAN_DEF_VALUE_RULE_ID	NUMBER(38),
  BORROW_REQUEST_TYPE	VARCHAR2(10),
  COUNTRY_CATEGORY_CD	VARCHAR2(3),
  FUND_CATEGORY_CD	VARCHAR2(3),
  SETTLE_DATE_VALUE	NUMBER(3),
  PREPAY_DATE_VALUE	NUMBER(3),
  COUNTRY_PREPAY_DATE_VALUE_FLAG	VARCHAR2(1),
  LAST_UPDATED_AT	DATE,
  LAST_UPDATED_BY	VARCHAR2(64)
) TABLESPACE GEC
;
  
COMMENT ON TABLE GEC_LOAN_DEF_VALUE_RULE
  IS 'This table is used to store rule for geting loan default value.';
COMMENT ON COLUMN GEC_LOAN_DEF_VALUE_RULE.BORROW_REQUEST_TYPE
  IS 'Values: NSB, SB.';	
COMMENT ON COLUMN GEC_LOAN_DEF_VALUE_RULE.COUNTRY_CATEGORY_CD
  IS 'Values: ALL, value from GEC_COUNTRY_CATEGORY table.';	
COMMENT ON COLUMN GEC_LOAN_DEF_VALUE_RULE.FUND_CATEGORY_CD
  IS 'Values: ALL, value from GEC_FUND_CATEGORY table.';  
COMMENT ON COLUMN GEC_LOAN_DEF_VALUE_RULE.SETTLE_DATE_VALUE
  IS 'Default loan settlement date is (short settlement date - value).';	
COMMENT ON COLUMN GEC_LOAN_DEF_VALUE_RULE.PREPAY_DATE_VALUE
  IS 'Default loan prepay date is (short settlement date - value).';	
COMMENT ON COLUMN GEC_LOAN_DEF_VALUE_RULE.COUNTRY_PREPAY_DATE_VALUE_FLAG
  IS 'Values: Y,N. Indicate if need minus prepay date value which config on trade country page.';	 
  
ALTER TABLE GEC_LOAN_DEF_VALUE_RULE
  ADD CONSTRAINT GEC_LOAN_DEF_VALUE_RULE_PK PRIMARY KEY (LOAN_DEF_VALUE_RULE_ID)  USING INDEX TABLESPACE  GEC;