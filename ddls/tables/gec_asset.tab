create table GEC_ASSET
(
  ASSET_ID          	NUMBER(38) not null,
  CUSIP             	VARCHAR2(9),
  ISIN              	VARCHAR2(12),
  SEDOL             	VARCHAR2(7),
  QUIK              	VARCHAR2(5),
  TICKER            	VARCHAR2(50),
  DESCRIPTION       	VARCHAR2(50),
  SOURCE_FLAG       	VARCHAR2(1) not null,
  TRADE_COUNTRY_CD		VARCHAR2(3),
  ASSET_TYPE_ID			VARCHAR2(1), 
  PRICE_CURRENCY_CD     VARCHAR2(3),
  PRICE_DATE            NUMBER(8),
  CLEAN_PRICE           NUMBER(15,7),
  DIRTY_PRICE           NUMBER(15,7),
  LIQUIDITY_FLAG        VARCHAR2(3),
  NO_SHORT_SELL_REALTIME VARCHAR2(1),
  NO_NAKED_SHORT_SELL   VARCHAR2(1),
  UPDATED_BY			VARCHAR2(64),
  UPDATED_AT			DATE,
  ID_BB_GLOBAL			VARCHAR2(12),
  LAST_UPDATED_BY   	VARCHAR2(64),
  LAST_UPDATED_AT   	DATE
) tablespace GEC
;
comment on column GEC_ASSET.SOURCE_FLAG
  is 'Values: S,M. S: from security master file; M: manually input or updated by trader';
comment on column GEC_ASSET.UPDATED_BY is 'The user id who updated the records. For system updating, it is null, and will display System in UI. When creating, the value is equal to the user ID of creater.';
comment on column GEC_ASSET.ASSET_TYPE_ID is 'Plz refer to gec_asset_type table for the description. GEC load securities by table GEC_ASSET_TYPE_MAP.';
comment on column GEC_ASSET.PRICE_DATE is 'The format is: CCYYMMDD, eg: 20100924.';
comment on column GEC_ASSET.LIQUIDITY_FLAG 
  is 'Indicates if the security is liquid (value: YES), illiquid (value: NO) or N/A. Initially the value is null.';
  
alter table GEC_ASSET
  add ( constraint GEC_ASSET_PK primary key (ASSET_ID) USING INDEX TABLESPACE GEC ) ;

create index GEC_ASSET_IDX1 on GEC_ASSET (TICKER) TABLESPACE GEC ;
create unique index GEC_ASSET_IDX2 on GEC_ASSET (CUSIP) TABLESPACE GEC ;
create index GEC_ASSET_IDX3 on GEC_ASSET (ISIN, TRADE_COUNTRY_CD) TABLESPACE GEC ;
create index GEC_ASSET_IDX4 on GEC_ASSET (SEDOL) TABLESPACE GEC ;
create index GEC_ASSET_IDX5 on GEC_ASSET (QUIK) TABLESPACE GEC ;
create index GEC_ASSET_IDX6 on GEC_ASSET (SUBSTR(CUSIP, 1, 8)) TABLESPACE GEC ;