CREATE TABLE GEC_HOLIDAY 
(
  HOLIDAY_ID		  NUMBER(38) not null,
  TRADE_COUNTRY_CD    VARCHAR2(2) not null,
  CALENDAR_DATE       DATE not null,
  CALENDAR_TYPE       VARCHAR2(1) not null,
  DAY_TYPE            NUMBER(1),
  DESCRIPTION         VARCHAR2(50),
  UPDATED_BY		  VARCHAR2(64),
  UPDATED_AT		  DATE,
  LAST_UPDATED_BY     VARCHAR2(64),
  LAST_UPDATED_AT     DATE
) TABLESPACE GEC;

alter table GEC_HOLIDAY
  add ( constraint GEC_HOLIDAY_PK primary key (HOLIDAY_ID)  USING INDEX TABLESPACE  GEC);
alter table GEC_HOLIDAY
  add  constraint GEC_HOLIDAY_UK1 UNIQUE (TRADE_COUNTRY_CD, CALENDAR_DATE, CALENDAR_TYPE) USING INDEX TABLESPACE GEC;
  
comment on column GEC_HOLIDAY.TRADE_COUNTRY_CD is 'The value is the same as GEC_TRADE_COUNTRY.TRADE_COUNTRY_CD. ';
comment on column GEC_HOLIDAY.CALENDAR_DATE is 'The value should only have date part, the time(hh24:mi:ss) value should always be 00:00:00.';
comment on column GEC_HOLIDAY.CALENDAR_TYPE is 'Values: S-ettlement calendar, T-rading calendar';
comment on column GEC_HOLIDAY.DAY_TYPE is 'Values: 3 means holiday, 4 means additional working day. GEC has only value 3 in PROD for now(2012/11/28).';
comment on column GEC_HOLIDAY.DESCRIPTION is 'Free comment that is not used by application, eg: ''Good Friday'', ''Thanksgiving'' etc';
comment on column GEC_HOLIDAY.LAST_UPDATED_BY is 'No need to set value when inserting. The audit trigger will take care of its value.';
comment on column GEC_HOLIDAY.LAST_UPDATED_AT is 'No need to set value when inserting. The audit trigger will take care of its value.';
