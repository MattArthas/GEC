create table GEC_CHAIN
(
	CHAIN_ID	        NUMBER(10),
	EQUILEND_CHAIN_ID	NUMBER(10) not null,
	CHAIN_DESC	        VARCHAR2(50),
	TYPE	            VARCHAR2(2),
	GEC_STATUS          VARCHAR2(1),
	UPDATED_AT	        DATE,
	UPDATED_BY	        VARCHAR2(64),
	LAST_UPDATED_AT	    DATE,
	LAST_UPDATED_BY	    VARCHAR2(64)
)tablespace GEC;

COMMENT ON COLUMN GEC_CHAIN.TYPE
  IS 'Value is AB/AL';
  
COMMENT ON COLUMN GEC_CHAIN.GEC_STATUS
  IS 'Value is I-active/A-ctive';
ALTER TABLE   GEC_CHAIN ADD CONSTRAINTS GEC_CHAIN_PK
  PRIMARY KEY(CHAIN_ID) USING INDEX TABLESPACE GEC;
  
ALTER TABLE GEC_CHAIN ADD CONSTRAINTS GEC_CHAIN_UK
  UNIQUE(EQUILEND_CHAIN_ID)USING INDEX TABLESPACE GEC;
