CREATE TABLE GEC_TRADE_AVAIL_FILTER
(
TRADE_AVAIL_FILTER_ID	NUMBER(38),
INVESTMENT_MANAGER_CD	VARCHAR2(32),
STRATEGY_NAME   			VARCHAR2(50),
LAST_UPDATED_AT	DATE,
LAST_UPDATED_BY	VARCHAR2(64)
) TABLESPACE GEC
;

COMMENT ON TABLE GEC_TRADE_AVAIL_FILTER
  IS 'This table is used for config Invest Manager/Strategy combination filter for extrate availability file to trading desk.';
COMMENT ON COLUMN GEC_TRADE_AVAIL_FILTER.INVESTMENT_MANAGER_CD
  IS 'Client short name in gec_client table, dispaly on Institution ID column under Manage Users page.';
COMMENT ON COLUMN GEC_TRADE_AVAIL_FILTER.STRATEGY_NAME
  IS 'STRATEGY_NAME in gec_strategy table.';  
ALTER TABLE GEC_TRADE_AVAIL_FILTER
  add ( constraint GEC_TRADE_AVAIL_FILTER_PK primary key (TRADE_AVAIL_FILTER_ID) USING INDEX TABLESPACE GEC);  
ALTER TABLE GEC_TRADE_AVAIL_FILTER
  add (constraint GEC_TRADE_AVAIL_FILTER_UK unique (INVESTMENT_MANAGER_CD, STRATEGY_NAME)  USING INDEX TABLESPACE  GEC);