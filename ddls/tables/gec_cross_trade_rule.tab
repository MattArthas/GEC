CREATE TABLE GEC_CROSS_TRADE_RULE
(
  CROSS_TRADE_RULE_ID	        NUMBER(38),
  BORROW_LEGAL_ENTITY	        VARCHAR2(40),
  DEMAND_LEGAL_ENTITY	        VARCHAR2(40),
  CROSS_BORROW_BROKER_CD		VARCHAR2(6) not null,
  CROSS_LOAN_BROKER_CD			VARCHAR2(6) not null,
  BOOK_G1_BORROW_FLAG	        VARCHAR2(1) default 'Y',
  LAST_UPDATED_BY       	    VARCHAR2(64),
  LAST_UPDATED_AT       	    DATE
) TABLESPACE GEC
;
  
COMMENT ON TABLE GEC_CROSS_TRADE_RULE
  IS 'This table  is used store the rule how to generated cross trade based on allocate borrow and demand.';
COMMENT ON COLUMN GEC_CROSS_TRADE_RULE.BOOK_G1_BORROW_FLAG
  IS 'Values: Y, N. A flag to control whether cross borrow will booked to G1 or not.';
COMMENT ON COLUMN GEC_CROSS_TRADE_RULE.CROSS_BORROW_BROKER_CD
  IS 'Indicate cross borrow counterparty, reference to gec_broker table';
COMMENT ON COLUMN GEC_CROSS_TRADE_RULE.CROSS_LOAN_BROKER_CD
  IS 'Indicate cross loan counterparty, reference to gec_broker table';
    
ALTER TABLE GEC_CROSS_TRADE_RULE
  ADD CONSTRAINT GEC_CROSS_TRADE_RULE_PK PRIMARY KEY (CROSS_TRADE_RULE_ID)  USING INDEX TABLESPACE  GEC;