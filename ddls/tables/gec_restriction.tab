create table GEC_RESTRICTION
(
  RESTRICTION_CD    VARCHAR2(1) not null,
  RESTRICTION_DESC  VARCHAR2(20),
  RESTRICTION_ABBRV VARCHAR2(10),
  COMMENT_TXT       VARCHAR2(50),
  LAST_UPDATED_BY   VARCHAR2(64),
  LAST_UPDATED_AT   DATE
)TABLESPACE GEC
;
comment on column GEC_RESTRICTION.RESTRICTION_CD
  is 'DML security restriction code';
comment on column GEC_RESTRICTION.RESTRICTION_ABBRV
  is 'Abbreviation';
alter table GEC_RESTRICTION
  add ( constraint GEC_RESTRICTION_PK primary key (RESTRICTION_CD)  USING INDEX  TABLESPACE GEC);

