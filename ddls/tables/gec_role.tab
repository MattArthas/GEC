create table GEC_ROLE
(
  ROLE_CD         VARCHAR2(30) not null,
  ROLE_NAME       VARCHAR2(50),
  ROLE_DESC       VARCHAR2(250),
  BUSINESS_ROLE_NAME	VARCHAR2(50),
  BUSINESS_ROLE_DESC	VARCHAR2(250),
  LAST_UPDATED_BY VARCHAR2(64),
  LAST_UPDATED_AT DATE
)TABLESPACE GEC
;
alter table GEC_ROLE
  add ( constraint GEC_ROLE_PK primary key (ROLE_CD)  USING INDEX TABLESPACE  GEC);

comment on table GEC_ROLE
  is 'Role Table';
comment on column GEC_ROLE.BUSINESS_ROLE_NAME
  is 'Business Role Renamed to a more Business/Client type label, it will be populated to the client specific customer access report.';
comment on column GEC_ROLE.BUSINESS_ROLE_DESC
  is 'Business Role Description to a more Business/Client type label, it will be populated to the client specific customer access report.';
