create table GEC_STATUS
(
  STATUS_CD       VARCHAR2(1) not null,
  STATUS_DESC     VARCHAR2(50),
  SHORT_DESC      VARCHAR2(50),
  COMMENT_TXT     VARCHAR2(4000),
  LAST_UPDATED_BY VARCHAR2(64),
  LAST_UPDATED_AT DATE
)TABLESPACE GEC
;
comment on table GEC_STATUS
  is 'status code reference';
comment on column GEC_STATUS.STATUS_CD
  is 'Status code value';
comment on column GEC_STATUS.STATUS_DESC
  is 'Status code description';
comment on column GEC_STATUS.SHORT_DESC
  is 'Short description';

