create table GEC_COLUMN
(
  COLUMN_ID       VARCHAR2(50) not null,
  COLUMN_DESC     VARCHAR2(256),
  HEADER_TEXT     VARCHAR2(64),
  DISPLAY_WIDTH   NUMBER(4),
  SORTABLE_FLAG   CHAR(1),
  MANDATORY_FLAG  CHAR(1),
  MANAGE_FLAG     CHAR(1),
  LAST_UPDATED_BY VARCHAR2(64),
  LAST_UPDATED_AT DATE
)TABLESPACE GEC
;
alter table GEC_COLUMN
  add ( constraint GEC_COLUMN_PK primary key (COLUMN_ID)  USING INDEX TABLESPACE  GEC);

comment on column GEC_COLUMN.COLUMN_ID
  is 'Flex UI datafield name.';  
comment on column GEC_COLUMN.HEADER_TEXT
  is 'The head text on datagrid of UI.';  
comment on column GEC_COLUMN.DISPLAY_WIDTH
  is 'The length of render text UI.';  
comment on column GEC_COLUMN.SORTABLE_FLAG
  is 'Y:Sortable;N:not sortable On UI.';  
comment on column GEC_COLUMN.MANDATORY_FLAG
  is 'Y:MANDATORY; N:NOT MANDATORY. Y means the column can not be moved from "selected columns" to "available columns" in manage column function.';  
comment on column GEC_COLUMN.MANAGE_FLAG
  is 'Y:Effective; N:Ineffective. Y means this column can be displayed, while N means the column must not be displayed (means it is not in manage column component.)';  
