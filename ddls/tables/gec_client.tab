create table GEC_CLIENT
(
  CLIENT_ID               NUMBER(38) not null,
  CLIENT_SHORT_NAME       VARCHAR2(32),
  CLIENT_NAME             VARCHAR2(64),
  CLIENT_LEGAL_NAME       VARCHAR2(64),
  CLIENT_TYPE             VARCHAR2(3),
  CLIENT_STATUS           VARCHAR2(1),
  CREATED_AT              DATE,
  LAST_UPDATED_BY         VARCHAR2(64),
  LAST_UPDATED_AT         DATE
)TABLESPACE GEC
;
alter table GEC_CLIENT
  add ( constraint GEC_CLIENT_PK primary key (CLIENT_ID) USING INDEX TABLESPACE  GEC);
alter table GEC_CLIENT
  add (constraint GEC_CLIENT_UK unique (CLIENT_SHORT_NAME)  USING INDEX TABLESPACE  GEC);
alter table GEC_CLIENT
  add constraint GEC_CLIENT_FK1 foreign key (CLIENT_TYPE)
  references GEC_CLIENT_TYPE (CLIENT_TYPE);
  

comment on column GEC_CLIENT.CLIENT_ID
  is 'Sequence ID';  
comment on column GEC_CLIENT.CLIENT_SHORT_NAME
  is 'Client short name which equals to investment manager cd.';  
comment on column GEC_CLIENT.CLIENT_TYPE
  is 'EXT:external user; INT:internal user.'; 
comment on column GEC_CLIENT.CLIENT_STATUS
  is 'A:Active;I:Inactive.';  
