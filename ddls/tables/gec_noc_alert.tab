create table GEC_NOC_ALERT
(
  NOC_ALERT_CD     VARCHAR2(50) not null,
  SOP_CD         VARCHAR2(10),
  UXCODE         VARCHAR2(10),
  COMMENT_TXT    VARCHAR2(4000),
  ALERT_FLAG      VARCHAR2(1) default 'Y',
  LAST_UPDATED_BY VARCHAR2(64),
  LAST_UPDATED_AT DATE
)TABLESPACE GEC
;
alter table GEC_NOC_ALERT add constraints
   GEC_NOC_ALERT_PK PRIMARY KEY(NOC_ALERT_CD) USING INDEX TABLESPACE GEC;
COMMENT ON COLUMN GEC_NOC_ALERT.NOC_ALERT_CD
  IS 'PK, the value is used in JAVA to look for alert info.';
COMMENT ON COLUMN GEC_NOC_ALERT.SOP_CD
  IS 'The value is used to look for special SOP rule, the formate like GEC-010, and included in log file.';  
COMMENT ON COLUMN GEC_NOC_ALERT.UXCODE
  IS 'The value is used to send UX alert email, and included in log file.'; 
