create table GEC_SSGM_LOAN
(
  GEC_SSGM_LOAN_ID NUMBER(10) not null,
  ALLOCATION_ID    NUMBER(38),
  ASSET_ID         NUMBER(38) not null,
  STATUS           VARCHAR2(1) default 'O' not null,
  TRADE_DATE       NUMBER(8),
  SETTLE_DATE      NUMBER(8),
  SSGM_LOAN_QTY    NUMBER(38) not null,
  RATE             NUMBER(14,6),
  COMMENT_TXT      VARCHAR2(4000),
  CREATED_AT       DATE default sysdate,
  CREATED_BY       VARCHAR2(64),
  UPDATED_AT       DATE default sysdate,
  UPDATED_BY       VARCHAR2(64),
  LAST_UPDATED_AT  DATE,
  LAST_UPDATED_BY  VARCHAR2(64)
)tablespace GEC;

comment on column GEC_SSGM_LOAN.GEC_SSGM_LOAN_ID
  is 'sequence id';
comment on column GEC_SSGM_LOAN.STATUS
  is 'Value: O-pen, C-losed';
comment on column GEC_SSGM_LOAN.ALLOCATION_ID
  is 'The value is null when the ssgn-loan is manually booked by trader or from DML ssgm loan file. The value is gec_allocation.allocation_id when it is an allocation to 0189 in Allocation tab.';



alter table GEC_SSGM_LOAN
  add ( constraint GEC_SSGM_LOAN_PK primary key (GEC_SSGM_LOAN_ID)  USING INDEX TABLESPACE  GEC);

alter table GEC_SSGM_LOAN
  add constraint GEC_SSGM_LOAN_FK1 foreign key (ALLOCATION_ID)
  references GEC_ALLOCATION (ALLOCATION_ID);   
alter table GEC_SSGM_LOAN
  add constraint GEC_SSGM_LOAN_FK2 foreign key (ASSET_ID)
  references GEC_ASSET (ASSET_ID);   

