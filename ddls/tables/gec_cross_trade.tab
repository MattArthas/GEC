CREATE TABLE GEC_CROSS_TRADE
(
  CROSS_TRADE_ID	        NUMBER(38),
  ALLOCATION_ID	          NUMBER(38),
  BULK_G1_TRADE_ID	      NUMBER(38),
  FLIP_BORROW_ID		  NUMBER(38),  
  SOURCE	        	  VARCHAR2(10),
  BORROW_ID	              NUMBER(38),
  LOAN_ID	                NUMBER(38),
  LAST_UPDATED_BY       	VARCHAR2(64),
  LAST_UPDATED_AT       	DATE
) TABLESPACE GEC
;
  
COMMENT ON TABLE GEC_CROSS_TRADE
  IS 'This table  is used store generated cross trade relationship when allocation happen cross LE.';
COMMENT ON COLUMN GEC_CROSS_TRADE.SOURCE
  IS 'Values: SHORT (means allocation happen between borrow and short), FT (means allocation happen between borrow and flip trade), BT (means from bulk trade)';
COMMENT ON COLUMN GEC_CROSS_TRADE.BORROW_ID
  IS 'Generated cross borrow id';
COMMENT ON COLUMN GEC_CROSS_TRADE.LOAN_ID
  IS 'Generated cross loan id';
  
ALTER TABLE GEC_CROSS_TRADE
  ADD CONSTRAINT GEC_CROSS_TRADE_PK PRIMARY KEY (CROSS_TRADE_ID)  USING INDEX TABLESPACE  GEC;