CREATE TABLE GEC_BBO_ACTIVITY
(
  BBO_ACTIVITY_ID	NUMBER(38),
  FILE_NAME	VARCHAR2(255),
  SEQ_NUM	NUMBER(10),
  STATUS	VARCHAR2(1),
  ACTIVITY_TYPE	VARCHAR2(64),
  ACTIVITY_SUB_TYPE	VARCHAR2(64),
  DATE_TIMESTAMP	DATE,
  RECORD_COUNT	NUMBER(10),
  CREATED_AT	DATE,
  LAST_UPDATED_BY       	VARCHAR2(64),
  LAST_UPDATED_AT       	DATE
) TABLESPACE GEC
;
  
COMMENT ON TABLE GEC_BBO_ACTIVITY
  IS 'This table is used store request/response between GEC and BBO.';
COMMENT ON COLUMN GEC_BBO_ACTIVITY.SEQ_NUM
  IS 'Use GEC_BBO_REQUEST_REF_SEQ.';
COMMENT ON COLUMN GEC_BBO_ACTIVITY.STATUS
  IS 'Values: P-ending (Rest generate success), F-ail (Send failed), S-uccess (Rest Send success, Resp process success).';
COMMENT ON COLUMN GEC_BBO_ACTIVITY.ACTIVITY_TYPE
  IS 'Values: EULI';
COMMENT ON COLUMN GEC_BBO_ACTIVITY.ACTIVITY_SUB_TYPE
  IS 'Values: RQST, RESP';
COMMENT ON COLUMN GEC_BBO_ACTIVITY.DATE_TIMESTAMP
  IS 'DATE TIME STAMP in file name.';
COMMENT ON COLUMN GEC_BBO_ACTIVITY.RECORD_COUNT
  IS 'Request/Response body record count.';
  
ALTER TABLE GEC_BBO_ACTIVITY
  ADD CONSTRAINT GEC_BBO_ACTIVITY_PK PRIMARY KEY (BBO_ACTIVITY_ID)  USING INDEX TABLESPACE  GEC;