create table GEC_BRANCH
(
  BRANCH_ID           NUMBER(10),
  BRANCH_CD           VARCHAR2(10) not null,
  BRANCH_NAME         VARCHAR2(50),
  LEGAL_ENTITY_ID	  NUMBER(10),
  LAST_UPDATED_BY     VARCHAR2(64),
  LAST_UPDATED_AT     DATE
)TABLESPACE GEC
;
alter table GEC_BRANCH
  add ( constraint GEC_BRANCH_PK primary key (BRANCH_ID)  USING INDEX TABLESPACE  GEC);

comment on table GEC_BRANCH
  is 'The table is to save SFP branches.';
comment on column GEC_BRANCH.BRANCH_CD
  is 'Values: Boston, Canada';
comment on column GEC_BRANCH.BRANCH_NAME
  is 'Values: Boston, Canada';
alter table GEC_BRANCH
  add constraint GEC_BRANCH_FK1 foreign key (LEGAL_ENTITY_ID)
  references GEC_LEGAL_ENTITY (LEGAL_ENTITY_ID);
ALTER TABLE GEC_BRANCH
  ADD ( CONSTRAINT GEC_BRANCH_UK UNIQUE (BRANCH_CD)  USING INDEX TABLESPACE  GEC);